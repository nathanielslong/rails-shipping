<%= simple_form_for @job do |f| %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>

    <%= f.input :origin, required: true, collection: @ports %>
    <%= f.input :destination, required: true, collection: @ports %>

    <%= f.input :cost, required: true %>
    <%= f.input :needed_containers, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

